.main__chat
  .main__text
    .main__name
      = message.user.name
    .main__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__display
    - if message.content.present?
      %p.main__word
        = message.content
    - if message.image.present?
      %p.main__picture
        = image_tag message.image.url